{
  "name": "rake-db",
  "version": "2.3.30",
  "description": "Migrations tool for Postgresql DB",
  "homepage": "https://orchid-orm.netlify.app/guide/migration-setup-and-overview.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/romeerez/orchid-orm/tree/main/packages/rake-db"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "db": "ts-node -r tsconfig-paths/register app/dbScript.ts",
    "test": "jest --watch --verbose false",
    "check": "jest",
    "test:ci": "jest --coverage --coverageReporters json-summary",
    "build": "rimraf ./dist/ && rollup -c --rollup.config",
    "prepublishOnly": "pnpm build"
  },
  "jest": {
    "setupFiles": [
      "dotenv/config"
    ],
    "globalSetup": "../../jest-global-setup.ts",
    "setupFilesAfterEnv": [
      "../../jest-setup.ts",
      "./jest-setup.ts"
    ],
    "transform": {
      "^.+\\.ts$": "@swc/jest"
    }
  },
  "keywords": [
    "postgresql",
    "postgres",
    "pg",
    "migrations",
    "migration"
  ],
  "author": "Roman Kushyn",
  "license": "ISC",
  "dependencies": {
    "pluralize": "^8.0.0",
    "pqb": "workspace:*",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@swc/core": "^1.2.210",
    "@swc/helpers": "^0.4.12",
    "@swc/jest": "^0.2.21",
    "@types/jest": "^28.1.2",
    "@types/node": "^18.0.1",
    "@types/pluralize": "^0.0.29",
    "@types/prompts": "^2.4.2",
    "dotenv": "^16.0.3",
    "jest": "^28.1.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.0",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-esbuild": "^4.10.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  }
}
