{
  "name": "pqb",
  "version": "0.57.1",
  "description": "Postgres query builder",
  "homepage": "https://orchid-orm.netlify.app/guide/orm-and-query-builder.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/romeerez/orchid-orm/tree/main/packages/qb/pqb"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./node-postgres": {
      "require": "./dist/node-postgres.js",
      "import": "./dist/node-postgres.mjs",
      "types": "./dist/node-postgres.d.ts"
    },
    "./postgres-js": {
      "require": "./dist/postgres-js.js",
      "import": "./dist/postgres-js.mjs",
      "types": "./dist/postgres-js.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest --watch --verbose false",
    "check": "jest",
    "types": "tsc",
    "test:ci": "jest --coverage --coverageReporters json-summary",
    "build": "rimraf ./dist/ && rollup -c ./rollup.config.mjs",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "pg",
    "postgres",
    "query-builder"
  ],
  "author": "Roman Kushyn",
  "license": "ISC",
  "dependencies": {
    "@types/pg": ">=8",
    "orchid-core": "workspace:*"
  },
  "devDependencies": {
    "test-utils": "workspace:*",
    "zod": "^3.25.42"
  },
  "peerDependencies": {
    "pg": ">=8",
    "postgres": ">=3"
  },
  "peerDependenciesMeta": {
    "pg": {
      "optional": true
    },
    "postgres": {
      "optional": true
    }
  }
}
