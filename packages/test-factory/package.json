{
  "name": "orchid-orm-test-factory",
  "version": "0.2.35",
  "description": "Orchid ORM factories for tests",
  "homepage": "https://orchid-orm.netlify.app/guide/orm-test-factories.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/romeerez/orchid-orm/tree/main/packages/test-factory"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "test": "jest --watch --verbose false",
    "check": "jest",
    "test:ci": "jest --coverage --coverageReporters json-summary",
    "build": "rimraf ./dist/ && rollup -c --rollup.config",
    "prepublishOnly": "pnpm build"
  },
  "jest": {
    "setupFiles": [
      "dotenv/config"
    ],
    "globalSetup": "../../jest-global-setup.ts",
    "setupFilesAfterEnv": [
      "../../jest-setup.ts",
      "./jest-setup.ts"
    ],
    "transform": {
      "^.+\\.ts$": "@swc/jest"
    }
  },
  "keywords": [
    "orchid-orm",
    "test",
    "factory"
  ],
  "author": "Roman Kushyn",
  "license": "ISC",
  "dependencies": {
    "@anatine/zod-mock": "^3.6.0",
    "@faker-js/faker": "^7.6.0",
    "orchid-orm": "workspace:*",
    "orchid-orm-schema-to-zod": "workspace:*",
    "pqb": "workspace:*",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@swc/core": "^1.2.210",
    "@swc/jest": "^0.2.21",
    "@types/jest": "^28.1.2",
    "@types/node": "^18.0.1",
    "@types/pg": "^8.6.5",
    "dotenv": "^16.0.1",
    "jest": "^28.1.2",
    "pg": "^8.8.0",
    "pg-transactional-tests": "^1.0.7",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.0",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-esbuild": "^4.10.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  }
}
