{
  "name": "orchid-orm",
  "version": "1.5.29",
  "description": "Postgres ORM",
  "homepage": "https://orchid-orm.netlify.app/guide/orm-setup-and-overview.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/romeerez/orchid-orm/tree/main/packages/orm"
  },
  "bin": "dist/bin.js",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "test": "jest --watch --verbose false",
    "check": "jest",
    "test:ci": "jest --coverage --coverageReporters json-summary",
    "build": "rimraf ./dist/ && rollup -c --rollup.config",
    "prepublishOnly": "pnpm build"
  },
  "jest": {
    "setupFiles": [
      "dotenv/config"
    ],
    "setupFilesAfterEnv": [
      "../../jest-setup.ts",
      "./jest-setup.ts"
    ],
    "transform": {
      "^.+\\.ts$": "@swc/jest"
    }
  },
  "keywords": [
    "pg",
    "postgres",
    "orm",
    "ts",
    "typescript"
  ],
  "author": "Roman Kushyn",
  "license": "ISC",
  "dependencies": {
    "pqb": "workspace:*",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@swc/core": "^1.3.19",
    "@swc/jest": "^0.2.21",
    "@types/jest": "^28.1.2",
    "@types/node": "^18.0.1",
    "@types/pg": "^8.6.5",
    "@types/prompts": "^2.4.2",
    "dotenv": "^16.0.1",
    "jest": "^28.1.2",
    "orchid-orm-schema-to-zod": "workspace:*",
    "pg": "^8.7.3",
    "pg-transactional-tests": "^1.0.7",
    "rake-db": "workspace:*",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.0",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-esbuild": "^4.10.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "typescript": "*"
  }
}
