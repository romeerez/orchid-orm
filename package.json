{
  "description": "Top level package.json is for eslint and prettier only",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "author": "Roman K",
  "scripts": {
    "check": "turbo run check",
    "types": "turbo run types",
    "build": "turbo run build",
    "test:ci": "turbo run test:ci --cache-dir=.turbo",
    "publish:ci": "changeset tag && pnpm publish -r",
    "db": "pnpm --filter rake-db db",
    "core": "pnpm --filter orchid-core",
    "create-orm": "pnpm --filter create-orchid-orm",
    "orm": "pnpm --filter orchid-orm",
    "myqb": "pnpm --filter myqb",
    "pqb": "pnpm --filter pqb",
    "rake-db": "pnpm --filter rake-db",
    "zod": "pnpm --filter orchid-orm-schema-to-zod",
    "valibot": "pnpm --filter orchid-orm-valibot",
    "test-factory": "pnpm --filter orchid-orm-test-factory",
    "test-utils": "pnpm --filter test-utils",
    "doc": "cd docs && npm start"
  },
  "devDependencies": {
    "turbo": "^1.8.8",
    "dotenv": "^16.0.3",
    "@changesets/cli": "^2.26.1",
    "pg": "^8.11.2",
    "@types/pg": "^8.10.2",
    "@swc/core": "^1.3.46",
    "@swc/helpers": "^0.5.0",
    "@types/node": "^18.16.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "^5.4.5",
    "jest": "^29.5.0",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.5.0",
    "rimraf": "^4.4.1",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.7",
    "rollup": "^3.20.2",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "esbuild": "^0.17.15"
  }
}
